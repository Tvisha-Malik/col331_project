    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) Launch graphic",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/qemu-system-i386",
            "args": [
                "-serial", "mon:stdio",
                "-drive", "file=fs.img,index=1,media=disk,format=raw",
                "-drive", "file=xv6.img,index=0,media=disk,format=raw",
                "-smp", "2",
                "-m", "512",
                "-S",
                "-gdb", "tcp::26000"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "postDebugTask": "continueInGDB"
        },
        {
            "name": "(gdb) Launch nographic",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/qemu-system-i386",
            "args": [
                "-nographic",
                "-drive", "file=fs.img,index=1,media=disk,format=raw",
                "-drive", "file=xv6.img,index=0,media=disk,format=raw",
                "-smp", "2",
                "-m", "512",
                "-S",
                "-gdb", "tcp::26000"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "postDebugTask": "continueInGDB"
        }
    ]
}